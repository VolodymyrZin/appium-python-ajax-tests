pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/VolodymyrZin/appium-python-ajax-tests.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''
                    rm -rf allure-results
                    python3 -m venv venv
                    venv/bin/pip install --upgrade pip
                    venv/bin/pip install -r requirements.txt
                    npm install -g appium
                '''
            }
        }
        stage('Run tests') {
            steps {
                sh '''
                    nohup appium > appium.log 2>&1 &
                    sleep 5
                    venv/bin/pytest tests --junitxml=results.xml --alluredir=allure-results
                '''
            }
        }
    }
    post {
        always {
            junit 'results.xml'
            allure includeProperties: false, jdk: '', resultPolicy: 'LEAVE_AS_IS', results: [[path: 'allure-results']]
        }
    }
}
